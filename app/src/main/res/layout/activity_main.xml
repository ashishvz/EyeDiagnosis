<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:isScrollContainer="true"
    android:scrollbars="vertical"
    android:background="@drawable/checking">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200sp"
        app:cardElevation="50sp"
        app:cardCornerRadius="5sp"
        android:padding="15sp"
        android:layout_gravity="center"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/gallerycard"
        android:layout_margin="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:src="@drawable/gallery"
                android:layout_gravity="center_vertical"
                android:padding="5sp"/>

            <View
                android:layout_width="2sp"
                android:layout_height="match_parent"
                android:background="#444446"
                android:layout_margin="5sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/textgallery"
                android:textSize="25sp"
                android:gravity="center"
                android:textAlignment="center"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200sp"
        app:cardElevation="50sp"
        app:cardCornerRadius="5sp"
        android:padding="15sp"
        android:layout_gravity="center"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/cameracard"
        android:layout_margin="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:src="@drawable/camera"
                android:layout_gravity="center_vertical"
                android:padding="5sp"/>

            <View
                android:layout_width="2sp"
                android:layout_height="match_parent"
                android:background="#444446"
                android:layout_margin="5sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/cameratext"
                android:textSize="25sp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_marginLeft="25sp"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200sp"
        app:cardElevation="50sp"
        app:cardCornerRadius="5sp"
        android:padding="15sp"
        android:layout_gravity="center"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/disease_details"
        android:layout_margin="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:src="@drawable/dise"
                android:layout_gravity="center_vertical"
                android:padding="5sp"/>

            <View
                android:layout_width="2sp"
                android:layout_height="match_parent"
                android:background="#444446"
                android:layout_margin="5sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Get the Details of the Diseases"
                android:textSize="25sp"
                android:gravity="center"
                android:textAlignment="center" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
